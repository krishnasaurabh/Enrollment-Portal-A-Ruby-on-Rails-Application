<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :weekday_one %>
    <%= form.select :weekday_one, options_for_select(Course.weekday_ones.map {|key, value| [key.titleize, Course.weekday_ones.key(value)]}, @course.weekday_one) %>
  </div>

  <div class="field">
    <%= form.label :weekday_two %>
    <%= form.select :weekday_two, options_for_select(Course.weekday_twos.map {|key, value| [key.titleize, Course.weekday_twos.key(value)]}, @course.weekday_two) ,  include_blank: true%>
  </div>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.text_field :start_time %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.text_field :end_time %>
  </div>

  <div class="field">
    <%= form.label :course_code %>
    <%= form.text_field :course_code %>
  </div>

  <div class="field">
    <%= form.label :capacity %>
    <%= form.number_field :capacity %>
  </div>
  
  <div class="field">
    <%= form.label :waitlist_capacity %>
    <%= form.number_field :waitlist_capacity %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Course.statuses.map {|key, value| [key.titleize, Course.statuses.key(value)]}, @course.status) ,  include_blank: false, hidden: true%>
  </div>

  <div class="field">
    <%= form.label :room %>
    <%= form.text_field :room %>
  </div>
  <% if is_admin? %>
  <div class="field">
    <%= form.label :instructor_id, "Instructor name" %>
    <%= form.collection_select :instructor_id, Instructor.all,:id,:id, include_blank: false %>
  </div>
  <% end %>
                
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
